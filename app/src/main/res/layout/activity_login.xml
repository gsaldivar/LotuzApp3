<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="#121212"> <!-- Fondo oscuro gamer -->

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginBottom="32dp"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColor="#FFFFFF"
        android:textColorHint="#AAAAAA"
        android:inputType="textEmailAddress"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:textColor="#FFFFFF"
        android:textColorHint="#AAAAAA"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:backgroundTint="#FF0055"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/btnLoginAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Acceso como Administrador"
        android:layout_marginTop="12dp"
        android:backgroundTint="#333333"/>

    <Button
        android:id="@+id/btnLoginCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Acceso como Cliente"
        android:layout_marginTop="8dp"
        android:backgroundTint="#333333"/>

    <Button
        android:id="@+id/btnForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Olvidé mi contraseña"
        android:layout_marginTop="16dp"
        android:backgroundTint="#444444"/>

    <TextView
        android:id="@+id/tvDemoNotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Acceso de prueba (demo). Se desactiva en producción."
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="8dp"/>

</LinearLayout>
